.container{
    display: flex;
    flex-direction: column;
    width: 100%;
    position: relative;
}

#swiper{

    height: 400rpx;
    width: 100%;
    margin:0 auto;
    padding: 10rpx 30rpx;

}

.swipimg{
    height: 400rpx;
    width: 90%;  /* 如果不设置宽度，有可能图片右边显示不出来*/
}

#container swiper-item{
    align-items: center;
}

.description{
    height: 300rpx;
    border: #fafafa 2px solid;
    margin: 10rpx 20rpx;
    background-color: #fafafa;
}

.description .title{
    font-size: 50rpx;
    font-weight: bold;
    color: #3c3c3c;
    margin-left: 50rpx;
}

.description .category{
    margin-right: 30rpx;
}

.description .more{
    margin-top: 15rpx;
    text-indent: 2em;
}

.priceInfo {
    margin: 10rpx 20rpx;
}
.priceInfo .price{
    font-size: 60rpx;
    font-weight: bold;
    color: #f2772a;
}

.priceInfo .more{
    margin-top: 20rpx;
    color: #c8c8c8;
    font-size: 30rpx;
}

.afterSale{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 200rpx;
    /* border: green 1rpx solid; */
    padding: 10rpx 30rpx;
    justify-content: center;
}

.afterSale .post{
    display: flex;
}

.afterSale .post .name{
    font-weight: bold;
    width: 180rpx;
}

.afterSale .service{
    display: flex;
    margin-top: 35rpx;
}

.afterSale .service .name{
    font-weight: bold;
    width: 180rpx;
}

.footer {
    width: 100%;
    display: flex;
    position:fixed;
    bottom: 20rpx;
    height: 120rpx;
    justify-content: space-between;
    align-items: center;
    /* border: 1px solid green; */
    margin: 0 10rpx;
    
}

.footer .left{
    display: flex;
    float: left;
    font-size: 25rpx;
}

.footer .left view{
    margin: 0 10rpx;
}

.footer .right{
    float: right;
    margin-right: 30rpx;
    padding: 10rpx 50rpx;
    background-color: #ff7a01;
    color: #fafafa;
    border-radius: 30rpx;
}